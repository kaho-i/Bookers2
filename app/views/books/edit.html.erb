<% if @book.errors.any? %>
  <ul>
  <% @book.errord.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <label>Title</label><br>
  <%= f.text_field :title %><br>
  <label>Opinion</label><br>
  <%= f.text_area :opinion %><br>
  <%= f.submit "Update Book" %>
<% end %>

<%= link_to 'Show', book_path(@book) %>|
<%= link_to 'Back', "/books" %>
<h2>Book detail</h2>
<%= form_with model: @book do |f| %>
<table class="table">
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@user) do %>
          <%= image_tag @book.user.get_profile_image(80,80)%><br>
          <%= @user.name %>
        <% end %>
      </td>
      <td><%= link_to @book.title, book_path(@book) %></td>
      <td><%= @book.body %></td>
      <% if @user == current_user %>
        <td>
          <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success btn-block" %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-danger btn-block" %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>
<% end %>
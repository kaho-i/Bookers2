<div class ="container">
  <div class = "row">
    <div class = 'col-md-8 px-5 mx-auto'>
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h3><%= flash.now[:alert] %></h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
        
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="user-name">Name</label>
          <%= f.text_field :name,autofocus: true, id:"inputName", placeholder: "名前", class: "form-control user_name" %>
        </div>
        <div class="form-group">
          <label for="user-image">Image</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", class: "form-control-file user_name" %>
        </div>
        <div class="form-group">
          <label for="user-intoroduction">Introduction</label>
          <%= f.text_area :introduction, class: "form-control user_intoroduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>
<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <script src="https://kit.fontawesome.com/7338d13553.js" crossorigin="anonymous"></script>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div>Bookers</div>
      <i class="fa-solid fa-bars"></i>
      <% if user_signed_in? %>
        <li>
          <%= link_to user_path(current_user) do %>
            <i class="fa-solid fa-house"></i>Home
          <% end %>
        </li>
        <li>
          <%= link_to '/users' do %>
            <i class="fa-solid fa-users"></i>Users
          <% end %>
        </li>
        <li>
          <%= link_to '/books' do %>
            <i class="fa-solid fa-book-open"></i>Books
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa-solid fa-right-from-bracket"></i>Log out
          <% end %>
        </li>
      <% else %>
        <li>
          <%= link_to root_path do %>
             <i class="fa-solid fa-house"></i>Home
            <% end %>
        </li>
        <li>
          <%= link_to '/homes/about' do %>
            <i class="fa-solid fa-link"></i>About
          <% end %>
        </li>
        <li>
          <%= link_to new_user_registration_path do %>
            <i class="fa-solid fa-user-plus"></i>Sign up
          <% end %>
        </li>
        <li>
          <%= link_to new_user_session_path do %>
            <i class="fa-solid fa-right-to-bracket"></i>Log in
          <% end %>
        </li>
      <% end %>
    </header>
    <main>
      <% if notice %>
        <div class="flash-message">
          <%= notice %>
        </div>
      <% end %>
      
      <% if user_signed_in? && action_name != "edit" && action_name != "update" %>
        <div>
          <%= render partial: 'shared/dashboard', locals: { user: @user, book: @book } %>
        </div>
      <% end %>
      <%= yield %>
    </main>
    <footer>
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
